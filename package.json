{
  "name": "glyphlog",
  "version": "1.0.0",
  "description": "A fully typed, configurable logging library for TypeScript/JavaScript applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --emitDeclarationOnly && rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "tsx watch src/example.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "clean": "rimraf dist",
    "docs": "typedoc src/index.ts",
    "release": "standard-version",
    "example": "tsx src/example.ts"
  },
  "keywords": [
    "logger",
    "logging",
    "typescript",
    "typed",
    "structured-logging",
    "console",
    "file",
    "json"
  ],
  "author": "Aristide Dongo <dongokouamearistide95@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AristideDongo/glyphLog.git"
  },
  "bugs": {
    "url": "https://github.com/AristideDongo/glyphLog/issues"
  },
  "homepage": "https://github.com/AristideDongo/glyphLog#readme",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.6.0",
    "standard-version": "^9.5.0",
    "tslib": "^2.8.1",
    "tsx": "^4.6.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.9.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "dayjs": "^1.11.10"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
